<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="330dp"
        android:layout_height="154dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
    <ImageView
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:id="@+id/containerimage"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="fish name"
        android:id="@+id/containername"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/containerimage"
        android:textStyle="normal|bold"
        android:textSize="17sp"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="fish price"
        android:id="@+id/containerprice"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/containerimage"
        android:layout_below="@id/containername"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="fish quantity"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:id="@+id/containerquantity"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/containerimage"
        android:layout_below="@id/containerprice"

        />
<LinearLayout
    android:paddingTop="50dp"
    android:layout_width="match_parent"
    android:layout_height="152dp">

    <Button
        android:id="@+id/purchase"
        android:layout_gravity="center|center_vertical"
        android:elevation="2dp"
        android:textColor="#ffffff"
        android:layout_marginStart="210dp"
        android:text="ADD TO CART"
        android:layout_marginTop="20dp"
        android:onClick="cart"
        android:background="#000000"
        android:layout_height="50dp"
        android:layout_width="120dp" />

</LinearLayout>

        <ImageView
            app:srcCompat="@drawable/ic_favorite_border_black_24dp"
            android:layout_marginStart="260dp"
            android:id="@+id/imageView21"
            android:layout_height="40dp"
            android:layout_width="60dp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
