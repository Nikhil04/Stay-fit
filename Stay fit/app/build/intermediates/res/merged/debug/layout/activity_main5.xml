<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#78909C"
    tools:context="com.example.gujarati.naeshuruwat.Main5Activity">


    <android.support.v7.widget.CardView
        android:layout_marginTop="50dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/id1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="120dp">

        <ImageView
            android:src="@drawable/gymstay"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/im1" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/id2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        app:cardCornerRadius="4dp"
        android:layout_height="150dp"
        android:layout_below="@+id/id1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp">


        <ImageView
            android:src="@drawable/yogastay"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_below="@+id/card_view"
            android:layout_alignParentStart="true"
            android:layout_height="150dp"
            android:id="@+id/im2" />
    </android.support.v7.widget.CardView>

    <TextView
        android:text="Select a domain for Yourself!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="FOLLOW US ON!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="140dp"
        android:id="@+id/tv3" />

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
        android:layout_below="@+id/id2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">


        <Button
            android:text="Login with us"
            android:layout_width="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            android:background="@drawable/buttongradient2"
            android:id="@+id/bt4" />

        <Button
         android:layout_marginStart="70dp"
         android:text="Login with facebook"
         android:textColor="@color/colorWhite"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/buttongradient2"
         android:id="@+id/bt5"/>
 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp">



        <ImageView
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/newfb"
            android:id="@+id/im3"
            android:layout_width="70dp" />

        <ImageView
            android:layout_marginStart="40dp"
            android:src="@drawable/insta"
            android:id="@+id/im4"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:layout_marginStart="40dp"
            android:src="@drawable/t"
            android:id="@+id/im5"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</RelativeLayout>
