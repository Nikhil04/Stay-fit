<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_allnewyoga"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/new_card_background"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gujarati.naeshuruwat.allnewyoga">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/merannu"
        android:id="@+id/cv1"
        android:layout_width="150dp">

    <ImageView
        android:layout_height="100dp"
        app:srcCompat="@drawable/merannu"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:id="@+id/im5"
        android:layout_width="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            android:layout_marginTop="140dp"
            />

        <TextView
            android:text="Anulom Vilom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView29"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="150dp"
            android:layout_marginStart="5dp"
            android:fontFamily="serif-monospace" />

    </android.support.v7.widget.CardView>


</LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:layout_marginStart="180dp"
        android:background="@drawable/merannu"
        android:id="@+id/cv2"
        android:layout_width="150dp">

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@drawable/kapal1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView20"
            android:layout_width="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            android:layout_marginTop="140dp"
            />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_height="200dp"
        android:background="@drawable/merannu"
        android:layout_marginTop="262dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/cv4"
        android:layout_width="150dp">

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@drawable/gooo"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView14"
            android:layout_width="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            android:layout_marginTop="140dp"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_height="200dp"
        android:background="@drawable/merannu"
        android:id="@+id/cv3"
        android:layout_alignTop="@+id/cv4"
        android:layout_alignParentStart="true"
        android:layout_width="150dp">

        <ImageView
            android:layout_height="100dp"
            app:srcCompat="@drawable/merannu"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView29"
            android:layout_width="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f9d7db"
            android:layout_marginTop="140dp"
            />
    </android.support.v7.widget.CardView>


</RelativeLayout>
